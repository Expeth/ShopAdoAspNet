@model IEnumerable<ShopAdo.DAL.Category>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-3">
        <div class="card">
            <div class="card-header">
                <h4>Categories</h4>
            </div>
            <div class="card-body">
                @foreach (var item in Model)
                {
                    <a class="menu-btn" id="@item.CategoryId">@item.CategoryName</a><br><br>
                }
            </div>
        </div>
    </div>
    <div class="col-9" id="goods"></div>
</div>

<script>
    $(() => {
        $(".menu-btn").on("click", (e) => {
            $("#goods").load("/Shop/Goods?id=" + e.target.id);
        });
    });
</script>